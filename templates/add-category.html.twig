{% extends "base.html.twig" %}

{% block content %}
<main>
    <header>
        <div class="container">
            <h1>Ajouter une catégorie</h1>
        </div>
        <div class="login-button-container">
            <a href="index.php?uri=gestion-produit" class="login-button">Retour</a>
        </div>
    </header>

    <div class="container">
        {% if error_message is defined %}
            <div class="error-message">
                {{ error_message }}
            </div>
        {% endif %}

        <form action="index.php?uri=add-category" method="POST" class="form-standard">
            <div class="form-group">
                <label for="nom">Nom de la catégorie</label>
                <input type="text" 
                       id="nom" 
                       name="nom" 
                       required 
                       class="form-control"
                       placeholder="Entrez le nom de la catégorie">
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Ajouter</button>
                <a href="index.php?uri=gestion-produit" class="btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</main>
{% endblock %}