{% extends 'base.html.twig' %}

{% block header %}
<header>
    <div class="container">
        <h1>Gestion des commandes de r√©approvisionnement</h1>
        <p>G√©rez vos commandes ici</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=/" class="login-button">Revenir √† l'accueil</a>
    </div>
</header>
{% endblock %}

{% block content %}
<main>
    <section class="search-section">
        <form action="index.php" method="GET">
            <input type="hidden" name="uri" value="order-management">
            <label for="search">Rechercher une commande :</label>
            <input type="text" id="search" name="search" placeholder="Recherche par produit, fournisseur...">
            <button type="submit" class="searchBtn">
                üîç Rechercher
            </button>
        </form>

        <div id="filterBar" class="filterBar">
            <select id="statusFilter" class="statusFilter" onchange="filterOrders()">
                <option value="all">Tous les statuts</option>
                <option value="en_attente">En attente</option>
                <option value="livree">Livr√©e</option>
            </select>

            <select id="categoryFilter" class="categoryFilter" onchange="filterOrders()">
                <option value="all">Toutes les cat√©gories</option>
                {% if categories is defined %}
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.nom }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
    </section>

    <section class="product-section">
        <div class="container">
            {% if orders is defined and orders is not empty %}
                <table>
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Fournisseur</th>
                            <th>Date de livraison</th>
                            <th>Quantit√©</th>
                            <th>Prix</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            {% set isDelivered = order.date_livraison <= "now"|date('Y-m-d') %}
                            <tr>
                                <td>{{ order.product_name }}</td>
                                <td>{{ order.supplier_name }}</td>
                                <td>{{ order.date_livraison|date('d/m/Y') }}</td>
                                <td>{{ order.quantite }}</td>
                                <td>{{ order.prix }}‚Ç¨</td>
                                <td>
                                    <span class="status-badge status-{{ isDelivered ? 'livree' : 'en-attente' }}">
                                        {{ isDelivered ? 'Livr√©e' : 'En attente' }}
                                    </span>
                                </td>
                                <td class="actions">
                                    {% if not isDelivered %}
                                        <a href="index.php?uri=modify-order&id={{ order.id }}" 
                                           class="btn-edit" title="Modifier">‚úèÔ∏è</a>
                                        <a href="index.php?uri=delete-order&id={{ order.id }}" 
                                           onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette commande ?')"
                                           class="btn-delete" title="Supprimer">üóëÔ∏è</a>
                                        <a href="index.php?uri=tracking-order&id={{ order.id }}" 
                                           class="btn-track" title="Suivi">üì¶</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="no-results">Aucune commande trouv√©e</p>
            {% endif %}
        </div>
    </section>

    <div class="ajouter">
        <a href="index.php?uri=add-order" class="login-button">Nouvelle commande +</a>
    </div>
</main>
{% endblock %}