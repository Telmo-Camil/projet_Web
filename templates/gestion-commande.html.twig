</header>
{% endblock %}

{% block content %}
<main>
    <section class="search-section">
        <form action="index.php" method="GET">
            <input type="hidden" name="uri" value="order-management">
            <label for="search">Rechercher une commande :</label>
            <input type="text" id="search" name="search" placeholder="Recherche par produit, fournisseur...">
            <button type="submit" class="searchBtn">
                üîç Rechercher
            </button>
        </form>

        <div id="filterBar" class="filterBar">
            <select id="statusFilter" class="statusFilter" onchange="filterOrders()">
                <option value="all">Tous les statuts</option>
                <option value="en attente">En attente</option>
                <option value="valid√©e">Valid√©e</option>
                <option value="livr√©e">Livr√©e</option>
                <option value="annul√©e">Annul√©e</option>
            </select>

            <select id="categoryFilter" class="categoryFilter" onchange="filterOrders()">
                <option value="all">Toutes les cat√©gories</option>
                {% if categories is defined %}
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.nom }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
    </section>

    <section class="product-section">
        <div class="container">
            {% if orders is defined and orders is not empty %}
                <table>
                    <thead>
                        <tr>
                            <th>N¬∞ Commande</th>
                            <th>Produit</th>
                            <th>Cat√©gorie</th>
                            <th>Prix</th>
                            <th>Quantit√©</th>
                            <th>Fournisseur</th>
                            <th>Date livraison</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>CMD-{{ order.id }}</td>
                                <td>{{ order.product_name }}</td>
                                <td>{{ order.category_name }}</td>
                                <td>{{ order.prix }} ‚Ç¨</td>
                                <td>{{ order.quantite }}</td>
                                <td>{{ order.supplier_name }}</td>
                                <td>{{ order.date_livraison|date('d/m/Y') }}</td>
                                <td>
                                    {% set statusClass = order.statut|replace({'_': '-', ' ': '-'}) %}
                                    <span class="status-badge status-{{ statusClass }}">
                                        {% set status_labels = {
                                            'en attente': 'En attente',
                                            'en_attente': 'En attente',
                                            'en_preparation': 'En pr√©paration',
                                            'expediee': 'Exp√©di√©e',
                                            'en_transit': 'En transit',
