                                        <small>
                                            {% if order.statut == 'en_attente' %}
                                                Pr√©paration pr√©vue : {{ order.date_preparation_prevue|date('d/m/Y') }}
                                            {% elseif order.statut == 'en_preparation' %}
                                                Exp√©dition pr√©vue : {{ order.date_expedition_prevue|date('d/m/Y') }}
                                            {% elseif order.statut == 'expediee' %}
                                                Transit pr√©vu : {{ order.date_transit_prevue|date('d/m/Y') }}
                                            {% elseif order.statut == 'en_transit' %}
                                                Livraison pr√©vue : {{ order.date_livraison|date('d/m/Y') }}
                                            {% endif %}
                                        </small>
                                    </span>
                                </td>
                                <td>
                                    {% if order.statut in ['en attente', 'en_attente', 'en_preparation'] %}
                                        <a href="index.php?uri=modify-order&id={{ order.id }}" class="btn-edit" title="Modifier">‚úèÔ∏è</a>
                                        <a href="index.php?uri=delete-order&id={{ order.id }}" 
                                           onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cette commande ?')"
                                           class="btn-delete" title="Supprimer">üóëÔ∏è</a>
                                    {% endif %}
                                    <a href="index.php?uri=tracking-order&id={{ order.id }}" class="btn-track" title="Suivi">üì¶</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="no-results">Aucune commande trouv√©e</p>
            {% endif %}
        </div>
    </section>

    <div class="ajouter">
