 {% extends 'base.html.twig' %}
 
{% block header %}

<header>
    <div class="container">
      <h1>Inscription</h1>
      <p>Créez votre compte pour accéder à votre espace de gestion</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=/" class="login-button">Revenir à l'accueil</a>
    </div>
  </header>

{% endblock %}

 {% block content %}
 
<main>
  <section class="login-section">
    <div class="container login-card">
      <form action="#" method="post">
        <label for="fullname">Nom complet</label>
        <input type="text" id="fullname" name="fullname" required placeholder="Votre nom complet">

        <label for="email">Adresse e-mail</label>
        <input type="email" id="email" name="email" required placeholder="ex: utilisateur@mail.com">

        <label for="rôle">Rôle</label>
        <input type="text" id="rôle" name="rôle" required placeholder="ex: adminstrateur">


        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" required placeholder="********">

        <label for="confirm-password">Confirmer le mot de passe</label>
        <input type="password" id="confirm-password" name="confirm-password" required placeholder="********">

        <button type="submit">S'inscrire</button>
      </form>
    </div>
  </section>
</main>
 {% endblock %}
