{% extends 'base.html.twig' %}

{% block header %}
<header>
    <div class="container">
        <h1>Gestion des Fournisseurs</h1>
        <p>Ajoutez, modifiez ou supprimez des fournisseurs</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=/" class="login-button">Revenir à l'accueil</a>
    </div>
</header>
{% endblock %}

{% block content %}
<main>
    <section class="search-section">
        <form action="index.php" method="GET">
            <input type="hidden" name="uri" value="supplier-management">
            <label for="search">Rechercher un fournisseur :</label>
            <input type="text" id="search" name="search" placeholder="Recherche par nom, email ou ville...">
            <button type="submit" class="searchBtn">
                🔍 Rechercher
            </button>
        </form>
    </section>

    <section class="product-section">
        <div class="container">
            {% if error_message is defined %}
                <div class="error-message">{{ error_message }}</div>
            {% endif %}

            {% if success_message is defined %}
                <div class="success-message">{{ success_message }}</div>
            {% endif %}

            <table>
                <thead>
                    <tr>
                        <th>Nom du fournisseur</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Adresse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if suppliers is defined and suppliers is not empty %}
                        {% for supplier in suppliers %}
                            <tr>
                                <td>{{ supplier.nom }}</td>
                                <td>{{ supplier.email }}</td>
                                <td>{{ supplier.telephone }}</td>
                                <td>{{ supplier.adresse }}</td>
                                <td>
                                    <a href="index.php?uri=edit-supplier&id={{ supplier.id }}" class="btn-edit">✏️</a>
                                    <a href="index.php?uri=delete-supplier&id={{ supplier.id }}" 
                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce fournisseur ?')"
                                       class="btn-delete">🗑️</a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="no-results">Aucun fournisseur trouvé</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </section>

    <div class="ajouter">
        <a href="index.php?uri=add-supplier" class="login-button">Ajouter un fournisseur</a>
    </div>
</main>
{% endblock %}