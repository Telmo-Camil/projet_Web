 {% extends 'base.html.twig' %}
 
{% block header %}

<header>
    <div class="container">
      <h1>Paramètres</h1>
      <p>Gérez les configurations de votre espace de gestion</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=/" class="login-button">Revenir à l'accueil</a>
    </div>
  </header>

{% endblock %}

 {% block content %}
 
<main>
  <section class="settings-section">
    <div class="container login-card">
      <form action="#" method="post">
        <label for="username">Nom d'utilisateur</label>
        <input type="text" id="username" name="username" required placeholder="Votre nom d'utilisateur">

        <label for="email">Adresse e-mail</label>
        <input type="email" id="email" name="email" required placeholder="ex: utilisateur@mail.com">

        <label for="password">Nouveau mot de passe</label>
        <input type="password" id="password" name="password" required placeholder="********">

        <label for="confirm-password">Confirmer le mot de passe</label>
        <input type="password" id="confirm-password" name="confirm-password" required placeholder="********">

        <button type="submit">Mettre à jour</button>
      </form>
    </div>
  </section>
</main>
 {% endblock %}

 