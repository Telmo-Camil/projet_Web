{% extends 'base.html.twig' %}
 

{% block header %}

<header>
    <div class="container">
      <h1>Ajouter un fournisseur</h1>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=supplier-management" class="login-button">Retour</a>
    </div>
  </header>

{% endblock %}


 {% block content %}
 
 <main>
    <div class="container">
        {% if error_message is defined %}
            <div class="error-message">{{ error_message }}</div>
        {% endif %}

        <form action="index.php?uri=add-supplier" method="POST" class="supplier-form">
            <div class="form-group">
                <label for="nom">Nom du fournisseur :</label>
                <input type="text" id="nom" name="nom" required>
            </div>

            <div class="form-group">
                <label for="email">Email :</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="telephone">Téléphone :</label>
                <input type="tel" id="telephone" name="telephone" required>
            </div>

            <div class="form-group">
                <label for="adresse">Adresse :</label>
                <textarea id="adresse" name="adresse" required></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">Ajouter le fournisseur</button>
            </div>
        </form>
    </div>
</main>
 {% endblock %}