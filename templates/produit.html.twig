{% extends 'base.html.twig' %}
 
{% block header %}

<header>
    <div class="container">
      <h1>Gestion des produits</h1>
      <p>G√©rez vos produits ici</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=gestion-produit" class="login-button">Retour</a>
        <a href="index.php?uri=/" class="login-button">Revenir √† l'accueil</a>
    </div>
  </header>

{% endblock %}


 {% block content %}
<main>
    {% if error_message is defined and error_message is not empty %}
        <div class="error-message">
            <p>{{ error_message }}</p>
        </div>
    {% endif %}

    <div class="container">
        <section class="search-section">
            <div class="search-bar">
                <label for="search">Rechercher un produit :</label>
                <input type="text" id="search" name="search" placeholder="Recherche par nom ou cat√©gorie...">
                <button id="searchBtn" class="searchBtn">
                    üîç Rechercher
                </button>
            </div>
            
            <div class="filterBar">
                <select id="categoryFilter" name="category" class="categoryFilter" onchange="filterByCategory(this.value)">
                    <option value="all">Toutes les cat√©gories</option>
                    {% if categories is defined %}
                        {% for category in categories %}
                            <option value="{{ category.id }}" 
                                {% if selectedCategory == category.id %}selected{% endif %}>
                                {{ category.nom }}
                            </option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>
        </section>

        <div class="nav-grid">
            {% if products is defined and products is not empty %}
                {% for product in products %}
                    <div class="product-card">
                        <h4>{{ product.product_name }}</h4>
                        <p>Cat√©gorie : {{ product.category_name }}</p>
                        <p>Prix : {{ product.prix }} ‚Ç¨</p>
                        <p class="stock">En stock : {{ product.quantite }}</p>
                        <p>Fournisseur : {{ product.supplier_name }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <p class="no-results">Aucun produit disponible pour le moment.</p>
            {% endif %}
        </div>

    </div>
</main>
{% endblock %}

