{% extends 'base.html.twig' %}

{% block title %}Modifier un fournisseur{% endblock %}

{% block header %}

<header>
    <div class="container">
      <h1>Modifier un fournisseur</h1>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=supplier-management" class="login-button">Retour</a>
        <a href="index.php?uri=/" class="login-button">Revenir à l'accueil</a>
    </div>
  </header>

{% endblock %}

{% block content %}
<main>
    <div class="container">
        <h2>Modifier le fournisseur</h2>

        {% if error_message is defined %}
            <div class="error-message">{{ error_message }}</div>
        {% endif %}

        <form action="index.php?uri=modify-supplier" method="POST" class="form">
            <input type="hidden" name="id" value="{{ supplier.id }}">

            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" id="nom" name="nom" value="{{ supplier.nom }}" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="{{ supplier.email }}" required>
            </div>

            <div class="form-group">
                <label for="telephone">Téléphone</label>
                <input type="tel" id="telephone" name="telephone" value="{{ supplier.telephone }}">
            </div>

            <div class="form-group">
                <label for="adresse">Adresse</label>
                <textarea id="adresse" name="adresse">{{ supplier.adresse }}</textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">Enregistrer</button>
                <a href="index.php?uri=supplier-management" class="btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</main>
{% endblock %}

