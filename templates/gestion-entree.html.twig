{% extends 'base.html.twig' %}

{% block title %}Gestion des entr√©es{% endblock %}

{% block header %}
<header>
    <div class="container">
        <h1>Gestion des entr√©es</h1>
        <p>Liste des commandes livr√©es</p>
    </div>
    <div class="login-button-container">
        <a href="index.php?uri=/" class="login-button">Revenir √† l'accueil</a>
    </div>
</header>
{% endblock %}

{% block content %}
<main>
    <div class="container">
        {% if error_message is defined %}
            <div class="error-message">{{ error_message }}</div>
        {% endif %}

        {% if success_message is defined %}
            <div class="success-message">{{ success_message }}</div>
        {% endif %}

        <section class="search-section">
            <form action="index.php" method="GET" class="filters-form">
                <input type="hidden" name="uri" value="gestion-entree">
                
                <div class="filter-group">
                    <label for="search">Recherche :</label>
                    <input type="text" id="search" name="search" 
                           value="{{ search }}" 
                           placeholder="Produit ou fournisseur...">
                </div>

                <div class="filter-group">
                    <label for="date_debut">Date d√©but :</label>
                    <input type="date" id="date_debut" name="date_debut" 
                           value="{{ date_debut }}">
                </div>

                <div class="filter-group">
                    <label for="date_fin">Date fin :</label>
                    <input type="date" id="date_fin" name="date_fin" 
                           value="{{ date_fin }}">
                </div>

                <div class="filter-group">
                    <label for="supplier">Fournisseur :</label>
                    <select name="supplier" id="supplier">
                        <option value="">Tous les fournisseurs</option>
                        {% for supplier in suppliers %}
                            <option value="{{ supplier.id }}" 
                                    {% if selected_supplier == supplier.id %}selected{% endif %}>
                                {{ supplier.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="filter-group">
                    <label for="category">Cat√©gorie :</label>
                    <select name="category" id="category">
                        <option value="">Toutes les cat√©gories</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}"
                                    {% if selected_category == category.id %}selected{% endif %}>
                                {{ category.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="btn-filter">
                    üîç Filtrer
                </button>
                
                <a href="index.php?uri=gestion-entree" class="btn-reset">
                    R√©initialiser les filtres
                </a>
            </form>
        </section>

        <section class="entries-section">
            <div class="table-responsive">
                <table class="entries-table">
                    <thead>
                        <tr>
                            <th>Date de livraison</th>
                            <th>Produit</th>
                            <th>Cat√©gorie</th>
                            <th>Quantit√©</th>
                            <th>Prix unitaire</th>
                            <th>Fournisseur</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if entries is defined and entries is not empty %}
                            {% for entry in entries %}
                                <tr>
                                    <td>{{ entry.date }}</td>
                                    <td>{{ entry.product_name }}</td>
                                    <td>{{ entry.category_name }}</td>
                                    <td>{{ entry.quantity }}</td>
                                    <td>{{ entry.price_formatted }} ‚Ç¨</td>
                                    <td>{{ entry.supplier_name }}</td>
                                    <td>{{ entry.total_formatted }} ‚Ç¨</td>
                                    <td>
                                        <a href="#" 
                                           onclick="confirmDelete({{ entry.id }})" 
                                           class="btn-delete" 
                                           title="Supprimer">üóëÔ∏è</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="no-results">Aucune entr√©e disponible</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </section>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        {% if deliveredOrders is defined and deliveredOrders is not empty %}
            <table class="entries-table">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Fournisseur</th>
                        <th>Quantit√©</th>
                        <th>Date de livraison</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in deliveredOrders %}
                        <tr>
                            <td>{{ order.product_name }}</td>
                            <td>{{ order.supplier_name }}</td>
                            <td>{{ order.quantite }}</td>
                            <td>{{ order.date_livraison|date('d/m/Y') }}</td>
                            <td>
                                <button class="btn-action" onclick="validateEntry({{ order.id }})">
                                    Valider l'entr√©e
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="no-data"></p>
        {% endif %}
    </div>
</main>

<script>
function confirmDelete(id) {
    if (confirm('√ätes-vous s√ªr de vouloir supprimer cette entr√©e ?')) {
        window.location.href = 'index.php?uri=delete-entry&id=' + id;
    }
}

</script>
{% endblock %}